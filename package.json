{
  "name": "nuzlocke",
  "author": "Diego Ballesteros Castellanos",
  "description": "Nuzlocke tracker to record encounters with detailed information",
  "version": "3.6.0",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/diballesteros/nuzlocke/issues"
  },
  "nyc": {
    "exclude": "src/serviceWorker.js"
  },
  "private": true,
  "dependencies": {
    "html-to-image": "^1.7.0",
    "immer": "^9.0.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "react-window": "^1.8.6",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^2.0.3",
    "zustand": "^3.5.10"
  },
  "scripts": {
    "analyze": "source-map-explorer ''build/static/js/*.js'",
    "start": "react-scripts -r @cypress/instrument-cra start",
    "httpss": "HTTPS=true react-scripts start",
    "develop:ci": "CHOKIDAR_USEPOLLING=1 yarn start -r @cypress/instrument-cra start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "prettier --write src/**/*.ts{,x}",
    "lint": "tsc --noEmit && eslint src/**/*.ts{,x} --ignore-pattern *.test.tsx"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.9.11",
    "@cypress/instrument-cra": "^1.4.0",
    "@types/lodash": "^4.14.172",
    "@types/node": "^16.9.1",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@types/react-window": "^1.8.5",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "cypress": "^8.4.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "3.4.1",
    "eslint-plugin-react": "^7.25.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "node-sass": "4.14.1",
    "prettier": "^2.3.2",
    "source-map-explorer": "^2.5.2",
    "typescript": "4.0.8"
  }
}
